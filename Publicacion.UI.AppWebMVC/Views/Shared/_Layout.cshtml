<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-icons.css" rel="stylesheet" />

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/utilidades.js"></script>
    <script src="~/Scripts/sweetalert2.js"></script>
</head>

<body>

    <header>
        <style>
            .navbar {
                background-color: #349cc9;
            }
        </style>
        <nav class="navbar navbar-expand-lg ">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index","Home")">CRUD</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")"><i class="bi bi-person-circle"></i> Categorias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Usuario")"><i class="bi bi-person-circle"></i> Usuarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Roles")"><i class="bi bi-person-circle"></i> Roles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("VerProductos", "Producto")"><i class="bi bi-person-circle"></i> Productos</a>
                        </li>
                       
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main class="container">
        <div class="row pt-3">
            <div class="col-12">
                @RenderBody()
            </div>
        </div>
    </main>
    @RenderSection("Scripts", false)
</body>
</html>
